<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Your current order status."
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/slider_background"
        android:elevation="3dp"
        android:textStyle="bold"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/current_order_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="3dp"
        android:src="@drawable/placeholder"
        app:civ_border_color="@color/SuccessGreen"
        app:civ_border_width="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/current_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="OUT FOR DELIVERY"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:background="@drawable/slider_background"
        android:backgroundTint="@color/colorOrange"
        android:padding="16dp"
        android:elevation="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_order_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center"
        android:background="@drawable/slider_background"
        android:elevation="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_order_status">

        <ImageView
            android:id="@+id/ordered_indicatored"
            android:layout_width="15dp"
            android:translationX="12dp"
            android:tint="@color/colorGray"
            android:layout_height="15dp"
            app:srcCompat="@drawable/selected_dot" />
        <ProgressBar
            android:id="@+id/order_packed_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:progress="0"
            android:translationX="8dp"
            android:progressBackgroundTint="@color/colorGray"
            android:progressTint="@color/SuccessGreen"
            android:transformPivotX="0dp" />

        <ImageView
            android:id="@+id/packed_indicatored"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:tint="@color/colorGray"
            android:translationX="4dp"
            app:srcCompat="@drawable/selected_dot" />
        <ProgressBar
            android:id="@+id/packed_shipped_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:progress="0"
            android:progressBackgroundTint="@color/colorGray"
            android:progressTint="@color/SuccessGreen"
            android:transformPivotX="0dp" />

        <ImageView
            android:id="@+id/shipped_indicatored"
            android:layout_width="15dp"
            android:translationX="-4dp"
            android:tint="@color/colorGray"
            android:layout_height="15dp"
            app:srcCompat="@drawable/selected_dot" />
        <ProgressBar
            android:id="@+id/shipping_delivered_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:progress="0"
            android:translationX="-8dp"
            android:progressBackgroundTint="@color/colorGray"
            android:progressTint="@color/SuccessGreen"
            android:transformPivotX="0dp" />

        <ImageView
            android:id="@+id/delivered_indicatored"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:tint="@color/colorGray"
            android:translationX="-12dp"
            app:srcCompat="@drawable/selected_dot" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>